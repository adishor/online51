    {{ form_start(contactForm, { 'attr': {'class': 'contact-form'} }) }}
    {% form_theme contactForm 'contact/form/error-template.html.twig' %}
    {#flash#}

    <div class="row">
        <div class="col-xs-12">
            <h1 class="title-top">{{ 'contact.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <p>Site-ul <a href="http://www.online51.ro/">www.online51.ro</a> este proprietatea <strong>SC ALDEX SRL</strong></p>
