<div class="modal fade bs-modal-sm" id="videoConfirmModal" tabindex="-1" role="dialog" aria-labelledby="videoConfirmModalLabel">
    <div class="modal-dialog modal-sm" role="video">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="videoConfirmModalLabel">{{ 'modal.video-confirm.title'|trans }}</h4>
            </div>
            <div class="modal-body">
                <p id="videoConfirmModalBody"></p>
                <input type="hidden" id="videoConfirmModalId">
                <input type="hidden" id="videoConfirmModalPath">
                <input type="hidden" id="videoConfirmModalDownload">
                <input type="hidden" id="videoConfirmModalFlowplayer">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'modal.button.no'|trans }}</button>
                <button type="button" class="btn btn-primary" id="videoConfirmModalYes">{{ 'modal.button.yes'|trans }}</button>
            </div>
        </div>
    </div>
</div>

