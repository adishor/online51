<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=9" />
        <title>{% block title %} {{ 'index.page-title'|trans }} {% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                'assets/css/Bootstrap-3.3.7/css/bootstrap-theme.min.css'
                'assets/css/Bootstrap-3.3.7/css/bootstrap.min.css'
                'assets/css/Site.css'
                'assets/css/font-awesome-4.1.0/css/font-awesome.min.css'
                'assets/css/cssd2d5.css'
                'assets/css/css5d2a.css'
                'assets/css/jQueryUI/jquery-ui.css'
                'assets/css/jQueryUI/jquery-ui.theme.css'
                'assets/css/jQueryUI/jquery-ui.structure.css'     
            %}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% javascripts
              'assets/js/jquery-1.12.4.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </head>
    <body>
        {% block body %}
            
            <div id="loading" style="display: none;">
                <img title="Loader" alt="Loader" src="{{ asset('assets/images/ajax-loader.gif') }}"/>
            </div>

            {% block modal %}
            {% endblock modal %}

            {% block header %}
                {% include 'header.html.twig' %}
            {% endblock header %}

            {% block menu %}
                {{ render(controller('AppBundle:Default:menu')) }}
            {% endblock %}

            <hgroup class="title"></hgroup>
            <div id="jqcontainer" style="display: none"></div>
            <div class="container">
                <div class="bg-white">
                    <div class="row">
                        <div class="col-xs-9 set-width-content">
                        {% block ccontainer %}{% endblock %}
                    </div>

                    {% block rcontainer %}
                        <div class="col-xs-3 set-width">
                            {% block login %}
                                {{ render(controller('AppBundle:Default:showLoginBox')) }}
                            {% endblock %}
                            {% include 'right_container.html.twig' %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>

        {% block footer %}
            {% include 'footer.html.twig' %}
        {% endblock %}

    {% endblock %}

    {% block javascripts %}
        {% javascripts
              'assets/js/jquery-1.12.4.js'
              'assets/js/jquery-ui.min.js'
              'assets/js/Common.js'
              'assets/js/jquery.form4198.js'
              'assets/js/jquery.validate4198.js'
              'assets/js/jquery.validate.unobtrusive4198.js'
              'assets/js/bootstrap.min.js'
              'assets/js/website.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>
